<!DOCTYPE html>
<html>
<head>
<title>Project2_Club</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<!-- Custom Theme files -->
<link href="css/login.css" rel="stylesheet" type="text/css" media="all" />
<!-- //Custom Theme files -->
<!-- web font -->
<link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'><!--web font-->
<!-- //web font -->
<!-- js -->
<script src="js/jquery-2.1.4.min.js"></script>
<script src="js/login.js" type="text/javascript"></script>
<!-- //js -->
</head>
<body onload="init();">
	<!-- main -->
	<div class="main">
		<h1>Project2_CLUB Page</h1>
		<div class="login-form">
			<div class="sap_tabs w3ls-tabs">
				<div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
					<ul class="resp-tabs-list">
						<li class="resp-tab-item" aria-controls="tab_item-0" role="tab"><span>Login</span></li>
						<li class="resp-tab-item" aria-controls="tab_item-1" role="tab"><label>/</label><span>Sign up</span></li>
					</ul>
					<div class="clear"> </div>
					<div class="resp-tabs-container">
						<div class="tab-1 resp-tab-content" aria-labelledby="tab_item-0">
							<div class="login-agileits-top">
								<form action="/login" method="post">
									<p>User Email </p>
									<input type="text" name="login_id" id="login_id" placeholder="Email"/>
									<p>Password</p>
									<input type="password" name="login_pw" required="login_pw" placeholder="Password"/>
									<br/><br/><br/><br/>
									<input type="submit" value="LOGIN">
								</form>
							</div>
						</div>
						<div class="tab-1 resp-tab-content" aria-labelledby="tab_item-1">
							<div class="login-agileits-top sign-up">
								<form action="/join" method="post">
									<p>User Email </p>
									<input type="text" name="join_id"  id="join_id" placeholder="Email"/>
									<p>Password</p>
									<input type="password" name="join_pw" id="join_pw" placeholder="Password"/>
									<p>Re Password</p>
									<input type="password" name="join_pwd" id="join_pwd" placeholder="Re Pasaword"/>

									<p> Sex </p>
									<p>
										<input type="radio" name="gender" value="man">MAN
										&nbsp;&nbsp;&nbsp;
										<input type="radio" name="gender" value="woman">WOMAN
									</p>
									<!-- year -->
									<p> Birth Day</p>
									<div class="styled-select">
										<select id="year" name = "year">
											<option  selected="selected">YEAR</option>
										</select>
									</div>

									<div class="styled-select">
										<select id="month" name ="month">
											<option  selected="selected">MONTH</option>
										</select>
									</div>
									<div class="styled-select">
										<select id="day" name ="day">
											<option  selected="selected">DAY</option>
										</select>
									</div>

									<br/><br/><br/><br/>

									<input type="submit" value="REGISTER">
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- ResponsiveTabs js -->
			<script type="text/javascript">
				$(document).ready(function () {
					$('#horizontalTab').easyResponsiveTabs({
						type: 'default', //Types: default, vertical, accordion
						width: 'auto', //auto or any width like 600px
						fit: true   // 100% fit in a container
					});
				});
			</script>
			<script type="text/javascript">
				function init(){
					var date = new Date();
					var year = date.getFullYear();
					var selectValue=document.getElementById("year");
					var optionIndex=0;
					for(var i=year-60; i<=year-19; i++){
						selectValue.add(new Option(i+"년",i),optionIndex++);
					}

					selectValue=document.getElementById("month");
					var optionIndex=0;
					for(var i=1;i<=12;i++){
						selectValue.add(new Option(i+"월", i), optionIndex++);
					}
					selectValue=document.getElementById("day");
					var optionIndex=0;
					for(var i=1; i<=31; i++){
						selectValue.add(new Option(i+"일", i), optionIndex++);
					}
				}
			</script>
		</div>
	</div>
</body>
</html>
